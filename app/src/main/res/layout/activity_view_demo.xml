<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.lizhi.demo.viewdemo.ActivityViewDemo">


    <com.lizhi.demo.view.SquareView
        android:layout_width="wrap_content"
        app:squareColor="#ffff0000"
        app:isStoke="false"
        android:layout_height="wrap_content" />

    <com.lizhi.demo.view.OrientationSlideMoreRecycleView
        android:id="@+id/orientationSlideMoreRecycleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@color/colorAccent"
        android:text="nihao " />


</LinearLayout>
